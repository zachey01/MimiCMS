<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container bg-slate-200">
    <header id="header"><%- include('../partials/nonAuth/header'); %></header>
    <main>
      <div class="container">
        <div class="row">
          <% products.forEach(product => { %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <div class="card-body">
                <h4><%= product.name %></h4>
                <p class="fw-light"><%= product.description %></p>
                <p><code><%= product.price %><%= currency %></code></p>

                <div class="d-flex justify-content-between align-items-center">
                  <button
                    type="button"
                    class="btn btn-sm btn-outline-secondary"
                    onclick="nonAuth()"
                  >
                    Buy
                  </button>
                </div>
              </div>
            </div>
          </div>
          <script>
            function nonAuth() {
              alert("You must be logged in to purchase");
            }
          </script>
          <% }); %>
        </div>
      </div>
    </main>
    <footer id="footer" class="text-center text-muted">
      <%- include('../partials/footer'); %>
    </footer>
  </body>
</html>
