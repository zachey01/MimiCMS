<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header id="header"><%- include('../partials/header'); %></header>
    <main>
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="card">
              <div class="card-header">
                <h4 class="mb-0">Credit Card</h4>
              </div>
              <div class="card-body">
                <form>
                  <div class="form-group">
                    <label for="cardNumber">Card number</label>
                    <input
                      type="text"
                      class="form-control"
                      id="cardNumber"
                      placeholder="Enter card number"
                    />
                  </div>
                  <div class="form-group">
                    <label for="expiryDate">Expiry date</label>
                    <input
                      type="text"
                      class="form-control"
                      id="expiryDate"
                      placeholder="MM/YY"
                    />
                  </div>
                  <div class="form-group">
                    <label for="cvv">CVV</label>
                    <input
                      type="password"
                      class="form-control"
                      id="cvv"
                      placeholder="Enter CVV"
                    />
                  </div>
                  <button type="submit" class="btn btn-primary">Pay Now</button>
                </form>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card">
              <div class="card-header">
                <h4 class="mb-0">PayPal</h4>
              </div>
              <div class="card-body">
                <p>Click the button below to pay with PayPal.</p>
                <button type="button" class="btn btn-primary">
                  Pay with PayPal
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer id="footer" class="text-center text-muted">
      <%- include('../partials/footer'); %>
    </footer>
  </body>
</html>
