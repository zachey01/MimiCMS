<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container bg-slate-200">
    <header id="header"><%- include('../partials/header'); %></header>
    <main>
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="card">
              <div class="card-header">
                <h4 class="mb-0">Пополнение баланса</h4>
              </div>
              <div class="card-body">
                <form>
                  <div class="form-group">
                    <label for="cardNumber">Сумма</label>
                    <input
                      type="text"
                      class="form-control"
                      id="cardNumber"
                      placeholder="Введите сумму пополнения"
                    />
                  </div>
                  <button type="submit" class="btn btn-primary">
                    Пополнить
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer id="footer" class="text-center text-muted">
      <%- include('../partials/footer'); %>
    </footer>
  </body>
</html>
